{
  "name": "Tempo",
  "version": "1.0.0",
  "description": "Tempo",
  "main": "dist/src/index.js",
  "author": "khirayama",
  "engines": {
    "node": "9.8.0"
  },
  "scripts": {
    "start": "npm run server",
    "clean": "rm -rf dist",
    "compress": "node bin/compress.js ./dist/src/public",
    "compile:scripts": "tsc -p tsconfig.server.json",
    "compile:scripts:watch": "tsc -p tsconfig.server.json -w",
    "bundle:scripts": "webpack --mode production",
    "bundle:scripts:analyze": "ANALYSIS=true webpack --mode production",
    "bundle:scripts:watch": "webpack --mode development -w",
    "build:styles": "postcss -c .postcssrc.js src/presentations/index.css -o dist/src/public/index.css",
    "build:styles:watch": "postcss -c .postcssrc.js -w src/presentations/index.css -o dist/src/public/index.css",
    "build:images": "node bin/minimize-images.js",
    "copy:files": "cpx 'src/**/*.{json,woff2,png,ico,wepb,js,svg}' dist/src",
    "copy:files:watch": "cpx -w 'src/**/*.{json,woff2,png,ico,webp,js,svg}' dist/src",
    "server": "NODE_PATH=dist/src:dist/libs forever --silent dist/src/index.server.js",
    "server:dev": "NODE_PATH=dist/src:dist/libs nodemon dist/src/index.server.js",
    "build": "npm run clean && npm run compile:scripts && npm run build:styles && npm run bundle:scripts && npm run copy:files && npm run compress",
    "dev": "npm run clean && concurrently 'npm run compile:scripts' 'npm run build:styles' && concurrently 'npm run copy:files:watch' 'npm run compile:scripts:watch' 'npm run bundle:scripts:watch' 'npm run build:styles:watch' 'npm run server:dev'",
    "lint": "tslint --format verbose -c tslint.json 'src/**/*.{ts,tsx}' 'libs/**/*.{ts,tsx}'",
    "lint:fix": "tslint --fix --format verbose -c tslint.json 'src/**/*.{ts,tsx}' 'libs/**/*.{ts,tsx}'",
    "format": "prettier --ignore-path .gitignore --config .prettierrc --write 'src/**/!(*.html|*.png|*.webp|*.svg)' 'libs/**/!(*.html|*.png|*.webp|*.svg)'",
    "precommit": "npm run lint:fix && npm run format",
    "test": "NODE_PATH=src:libs jest -c jest.config.js",
    "test:update": "NODE_PATH=src:libs jest -u -c jest.config.js",
    "test:watch": "NODE_PATH=src:libs jest --watch -c jest.config.js",
    "test:e2e": "NODE_PATH=src:libs jest -c jest.config.e2e.js",
    "test:full": "npm run test && npm run test:e2e",
    "check": "npx npm-check-updates"
  },
  "dependencies": {
    "axios": "0.18.0",
    "classnames": "2.2.6",
    "deep-equal": "1.0.1",
    "fastify": "1.12.1",
    "forever": "0.15.3",
    "react": "16.5.2",
    "react-dom": "16.5.2",
    "react-transition-group": "2.5.0",
    "serve-static": "1.13.2",
    "useragent": "2.3.0",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@types/jest": "23.3.5",
    "@types/puppeteer": "1.9.0",
    "@types/react": "16.4.18",
    "@types/react-dom": "16.0.9",
    "autoprefixer": "9.2.1",
    "concurrently": "4.0.1",
    "cpx": "1.5.0",
    "cssnano": "4.1.5",
    "imagemin": "6.0.0",
    "imagemin-jpegtran": "5.0.2",
    "imagemin-pngquant": "6.0.0",
    "imagemin-webp": "4.1.0",
    "jest": "23.6.0",
    "minimist": "1.2.0",
    "node-zopfli-es": "0.0.2",
    "nodemon": "1.18.4",
    "postcss-cli": "6.0.1",
    "postcss-easy-import": "3.0.0",
    "postcss-nested": "4.1.0",
    "postcss-simple-vars": "5.0.1",
    "prettier": "1.14.3",
    "puppeteer": "1.9.0",
    "react-test-renderer": "16.5.2",
    "ts-jest": "23.10.4",
    "ts-loader": "5.2.2",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.15.0",
    "tslint-microsoft-contrib": "5.2.1",
    "tslint-plugin-prettier": "2.0.0",
    "typescript": "3.0.3",
    "webpack": "4.21.0",
    "webpack-bundle-analyzer": "3.0.3",
    "webpack-cli": "3.1.2"
  }
}
